<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" attributeFormDefault="unqualified">
	<xs:element name="Roomplan">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="Room" minOccurs="1" maxOccurs="1">
					<xs:complexType>
						<xs:sequence>
							<xs:element name="Height">
								<xs:simpleType>
									<xs:restriction base="xs:integer"/>
								</xs:simpleType>
							</xs:element>
							<xs:element name="Width">
								<xs:simpleType>
									<xs:restriction base="xs:integer"/>
								</xs:simpleType>
							</xs:element>
						</xs:sequence>
					</xs:complexType>
				</xs:element>
				<xs:element name="Walls">
					<xs:complexType>
						<xs:sequence>
							<xs:element name="Window" minOccurs="0" maxOccurs="unbounded">
								<xs:complexType>
									<xs:sequence>
										<xs:element name="StartPosition" type="Pos"/>
										<xs:element name="EndPosition" type="Pos"/>
									</xs:sequence>
								</xs:complexType>
							</xs:element>
							<xs:element name="Door" minOccurs="0" maxOccurs="unbounded">
								<xs:complexType>
									<xs:sequence>
										<xs:element name="StartPosition" type="Pos"/>
										<xs:element name="EndPosition" type="Pos"/>
										<xs:element name="OpenDirecktion">
											<xs:simpleType>
												<xs:restriction  base="xs:string">
													<xs:enumeration value="north"/>
													<xs:enumeration value="east"/>
													<xs:enumeration value="south"/>
													<xs:enumeration value="vest"/>
												</xs:restriction>
											</xs:simpleType>
										</xs:element>
									</xs:sequence>
								</xs:complexType>
							</xs:element>
							<xs:element name="Wall" minOccurs="4" maxOccurs="unbounded">
								<xs:complexType>
									<xs:sequence>
										<xs:element name="StartPosition" type="Pos"/>
										<xs:element name="EndPosition" type="Pos"/>
									</xs:sequence>
								</xs:complexType>
							</xs:element>
						</xs:sequence>
					</xs:complexType>
				</xs:element>
				<xs:element name="Furniture" minOccurs="0">
					<xs:complexType>
						<xs:sequence>
							<xs:element name="Chair" minOccurs="0" maxOccurs="unbounded"> 
								<xs:complexType>
									<xs:sequence>
										<xs:element name="Position" type="Pos"/>
										<xs:element name="Rotation">
											<xs:simpleType>
												<xs:restriction base="xs:decimal"/>
											</xs:simpleType>
										</xs:element>
										<xs:element name="Type">
											<xs:simpleType>
												<xs:restriction base="xs:string">
													<xs:enumeration value="Normal"/>
												</xs:restriction>
											</xs:simpleType>
										</xs:element>
									</xs:sequence>
								</xs:complexType>
							</xs:element>
							<xs:element name="Table" minOccurs="0" maxOccurs="unbounded">
								<xs:complexType>
									<xs:sequence>
										<xs:element name="Position" type="Pos"/> <!-- Defiens the Position of the right Part of the Tabel -->
										<xs:element name="Rotation"> <!-- Positive Value = rotation counter clockwies-->
											<xs:simpleType>
												<xs:restriction base="xs:decimal"/>
											</xs:simpleType>
										</xs:element><xs:element name="Type">
											<xs:simpleType>
												<xs:restriction base="xs:string">
													<xs:enumeration value="Dozent"/>
													<xs:enumeration value="Student"/>
													<xs:enumeration value="Blank"/>
													<xs:enumeration value="Lecurehall"/>
												</xs:restriction>
											</xs:simpleType>
										</xs:element>
									</xs:sequence>
								</xs:complexType>							
							</xs:element>
						</xs:sequence>
					</xs:complexType>
				</xs:element>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:complexType name="Pos"> 
		<xs:sequence>
			<xs:element name="Height">
				<xs:simpleType>
					<xs:restriction base="xs:integer"/>
				</xs:simpleType>
			</xs:element>
			<xs:element name="Width">
				<xs:simpleType>
					<xs:restriction base="xs:integer"/>
				</xs:simpleType>
			</xs:element>
		</xs:sequence>
	</xs:complexType>
</xs:schema>
